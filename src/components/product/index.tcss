.product {
  border-radius: 8px;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

.product_img-container {
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  overflow: hidden;
}

.product_text-container {
  height: 80px;
  padding: 0 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name text {
  font-size: 14px;
  font-weight: 600;
}

.product-price {
  padding: 10px 0;
}

.product-image-skeleton {
  width: 130px;
  height: 100px;
}
